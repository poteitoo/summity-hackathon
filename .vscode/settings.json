{
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.venv": true,
    "**/.github": true,
    "**/.devcontainer": true,
    "**/.eslintrc.json": true,
    "**/.prettierrc": true,
    "**/.prettierignore": true,
    "next-env.d.ts": true,
    "pnpm*": true,
    "postcss.config.js": true,
    "README.md": true,
    "public": true,
    "tsconfig.json": true,
    "tailwind.config.ts": true,
    "components.json": true,
    "app": true,
    "components": true,
    "entities": true,
    "lib": true,
    "repositories": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  }
}