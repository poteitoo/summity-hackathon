{
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.github": true,
    "**/.devcontainer": true,
    "**/node_modules": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  }
}
